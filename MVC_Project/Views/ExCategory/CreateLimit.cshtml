@model MVC_Project.Models.totalLimit

@{
    ViewBag.Title = "CreateLimit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create-Limit</h2>

<style>
    .error {
        color: red;
    }
</style>


@using (Html.BeginForm("AddLimit", "ExCategory", FormMethod.Post))
{
    <div class="container">


        <div class="form-group">
            <label>Total Limit</label>
            @Html.ValidationMessageFor(h => h.Total_Limit, "", new { @class = "error" })
            @Html.TextBoxFor(h => h.Total_Limit, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
}