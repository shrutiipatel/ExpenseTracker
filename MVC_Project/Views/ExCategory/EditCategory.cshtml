@model MVC_Project.Models.ExCategory

@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .error {
        color: red;
    }
</style>

<h2>Edit-Category</h2>

@using (Html.BeginForm("EditCategory", "ExCategory", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(h => h.Id)
            <label>Name</label>
            @Html.ValidationMessageFor(h => h.Name, "", new { @class = "error" })
            @Html.TextBoxFor(h => h.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Expanse_Limit</label>
            @Html.ValidationMessageFor(h => h.Ex_Limit, "", new { @class = "error" })
            @Html.TextBoxFor(h => h.Ex_Limit, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
}


